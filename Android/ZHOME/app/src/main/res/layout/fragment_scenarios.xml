<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.Miztheme"
    android:id="@+id/summaryLayout">

    <LinearLayout
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:src="@drawable/lights"
                android:id="@+id/lightsBtn"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:onClick="lightBtnClick" />

            </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Lights" />

        <ImageButton
            android:src="@drawable/lights"
            android:id="@+id/lightsBtn"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:onClick="lightBtnClick" />

        <ImageButton
            android:src="@drawable/sensors"
            android:id="@+id/sensorsBtn"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:onClick="sensorBtnClick" />

        <ImageButton
            android:src="@drawable/security"
            android:id="@+id/securityBtn"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:onClick="securityBtnClick" />
    </LinearLayout>

</TableLayout>