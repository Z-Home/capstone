<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:paddingLeft="5dp"
    android:paddingStart="5dp">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:id="@+id/thermostatScreenImageView"
        android:src="@drawable/thermostat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_toEndOf="@+id/thermostatScreenImageView"
        android:layout_toRightOf="@+id/thermostatScreenImageView"
        android:layout_toStartOf="@+id/temperatureTxt"
        android:layout_toLeftOf="@+id/temperatureTxt"
        android:id="@+id/thermostatScreenText"
        android:textSize="15sp"
        android:text="Thermostat"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/temperatureTxt"
        android:background="@drawable/gold_circle"
        android:scaleType="fitXY"
        android:text="72"
        android:gravity="center"
        android:textStyle="bold"/>

</RelativeLayout>

