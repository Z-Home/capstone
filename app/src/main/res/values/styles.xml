<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
<item name="android:actionBarTabStyle">@style/CustomTabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/CustomTabTextStyle</item>

    </style>

    <style name="CustomTabTextStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CustomActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ffffff</item>
        <item name="android:height">50dip</item>

    </style>

    <style name="CustomTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">#F1B82D</item>
        <item name="android:width">40dip</item>
    </style>

</resources>
